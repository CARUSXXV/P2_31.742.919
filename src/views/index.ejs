<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %> - Servicio de Plomería Profesional</title>
    <link rel="icon" type="image/png" href="https://raw.githubusercontent.com/lucide-icons/lucide/main/icons/droplet.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/css/styles.css">

  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="container navbar-container">
        <a href="#" class="logo">
          <i class="ri-drop-line"></i>
          <%= name %>
        </a>
        <button class="mobile-menu-btn">
          <i class="ri-menu-line"></i>
        </button>
        <div class="nav-links">
          <a href="#inicio">Inicio</a>
          <a href="#servicios">Servicios</a>
          <a href="#proyectos">Proyectos</a>
          <a href="#testimonios">Testimonios</a>
          <a href="#preguntas">FAQ</a>
          <a href="#contacto">Contacto</a>
        </div>
        <a href="tel:+584120367234" class="cta-button emergency-contact">
          <i class="ri-phone-line"></i>
          Emergencias 24/7
        </a>
      </div>
    </nav>

    <!-- Hero Section -->
    <section id="inicio" class="hero">
      <video class="hero-video" autoplay loop muted playsinline>
        <source src="/videos/mujer-fontanero.mp4" type="video/mp4" />
        Tu navegador no soporta la reproducción de videos.
      </video>
      <div class="hero-overlay"></div>
      <div class="container hero-content">
        <h1>Soluciones de Plomería Profesional</h1>
        <p>
          Expertos disponibles 24/7 para resolver cualquier emergencia con la
          máxima calidad y eficiencia
        </p>
        <a href="/contact" class="cta-button">
          <i class="ri-customer-service-line"></i>
          Solicitar Servicio
        </a>
        <a href="/payment" class="cta-button" style="background: linear-gradient(45deg, #00c853, #64dd17)">
          <i class="ri-secure-payment-line"></i>
          Pagar Servicio
      </a>
      </div>
    </section>

    <!-- Features Section -->
    <section class="features">
      <div class="container">
        <div class="features-grid">
          <% features.forEach(function(feature) { %>
          <div class="feature-card" data-aos="fade-up">
            <i class="ri-<%= feature.icon %>-line"></i>
            <h3><%= feature.title %></h3>
            <p><%= feature.description %></p>
          </div>
          <% }); %>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="servicios" class="services">
      <div class="container">
        <div class="section-title" data-aos="fade-up">
          <h2>Nuestros Servicios</h2>
          <p>Soluciones profesionales para todas tus necesidades</p>
        </div>
        <div class="services-grid">
          <% services.forEach(function(service, index) { %>
          <div
            class="service-card"
            data-aos="fade-up"
            data-aos-delay="<%= index * 100 %>"
          >
            <div class="service-image">
              <img src="<%= service.image %>" alt="<%= service.title %>" />
            </div>
            <div class="service-content">
              <h3><%= service.title %></h3>
              <p><%= service.description %></p>
              <div class="service-details">
                <ul>
                  <% service.details.forEach(function(detail) { %>
                  <li>
                    <i class="ri-check-line"></i>
                    <%= detail %>
                  </li>
                  <% }); %>
                </ul>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="proyectos" class="projects">
      <div class="container">
        <div class="section-title" data-aos="fade-up">
          <h2>Proyectos Destacados</h2>
          <p>Conoce algunos de nuestros trabajos más relevantes</p>
        </div>
        <div class="projects-grid">
          <% projects.forEach(function(project) { %>
          <div class="project-card" data-aos="fade-up">
            <img
              src="<%= project.image %>"
              alt="<%= project.title %>"
              class="project-image"
            />
            <div class="project-overlay">
              <h3><%= project.title %></h3>
              <p><%= project.description %></p>
              <span class="project-category"><%= project.category %></span>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
      <div class="container">
        <div class="stats-grid">
          <% stats.forEach(function(stat) { %>
          <div class="stat-item" data-aos="fade-up">
            <h3 class="floating"><%= stat.number %></h3>
            <p><%= stat.label %></p>
          </div>
          <% }); %>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section id="testimonios" class="testimonials">
      <div class="container">
        <div class="section-title" data-aos="fade-up">
          <h2>Lo que dicen nuestros clientes</h2>
          <p>Testimonios de clientes satisfechos</p>
        </div>
        <div class="swiper testimonials-slider" data-aos="fade-up">
          <div class="swiper-wrapper">
            <% testimonials.forEach(function(testimonial) { %>
            <div class="swiper-slide">
              <div class="testimonial-card">
                <div class="testimonial-image">
                  <img
                    src="<%= testimonial.image %>"
                    alt="<%= testimonial.author %>"
                  />
                </div>
                <p>"<%= testimonial.text %>"</p>
                <div class="testimonial-author"><%= testimonial.author %></div>
                <div class="testimonial-rating">
                  <% for(let i = 0; i < testimonial.rating; i++) { %>
                  <i class="ri-star-fill" style="color: #ffd700"></i>
                  <% } %>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
          <div class="swiper-pagination"></div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section id="preguntas" class="faq">
      <div class="container">
        <div class="section-title" data-aos="fade-up">
          <h2>Preguntas Frecuentes</h2>
          <p>Resolvemos tus dudas</p>
        </div>
        <div class="faq-grid">
          <% faqs.forEach(function(faq) { %>
          <div class="faq-item" data-aos="fade-up">
            <div class="faq-question"><%= faq.question %></div>
            <div class="faq-answer"><%= faq.answer %></div>
          </div>
          <% }); %>
        </div>
      </div>
    </section>

    


    <!-- CTA Section -->
    <section class="cta-section">
      <div class="container" data-aos="fade-up">
        <h2>¿Necesitas ayuda urgente?</h2>
        <p>Estamos disponibles 24/7 para atender tu emergencia</p>
        <a href="/contact"  class="cta-button cta-button-call">
          <i class="ri-phone-line"></i>
          ¡Contáctanos ahora!
        </a>
        <a href="/payment" class="cta-button" style="background: linear-gradient(45deg, #00c853, #64dd17);">
          <i class="ri-secure-payment-line"></i>
          Pagar Online
      </a>
      </div>
    </section>

    <!-- Footer -->
    <footer id="contacto" class="footer">
      <div class="container">
        <div class="footer-grid">
          <div class="footer-section">
            <h3>Contacto</h3>
            <p><i class="ri-phone-fill"></i> <%= phone %></p>
            <p><i class="ri-mail-fill"></i> <%= email %></p>
            <p><i class="ri-map-pin-fill"></i> <%= address %></p>
          </div>
          <div class="footer-section">
            <h3>Certificaciones</h3>
            <% certifications.forEach(function(cert) { %>
            <p><i class="ri-check-line"></i> <%= cert %></p>
            <% }); %>
          </div>
          <div class="footer-section">
            <h3>Síguenos</h3>
            <div class="social-links">
              <a href="https://www.facebook.com"><i class="ri-facebook-fill"></i></a>
              <a href="https://www.instagram.com"><i class="ri-instagram-fill"></i></a>
              <a href="https://www.whatsapp.com"><i class="ri-whatsapp-fill"></i></a>
            </div>
          </div>
        </div>
        <div
          style="
            text-align: center;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
          "
        >
          <p>
            &copy; <%= new Date().getFullYear() %> <%= name %>. Todos los
            derechos reservados.
          </p>
        </div>
      </div>
    </footer>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>

      // Inicializar AOS (Animaciones De Scroll)
      AOS.init({ 
        duration: 1000, // 1 Segundo
        once: true, // Solo se ejecuta 1 vez
        offset: 100, // La animación comienza cuando el elemento está a 100 píxeles de distancia del viewport
      });

      // Inicializar Swiper
      new Swiper(".testimonials-slider", {
        slidesPerView: 1,
        spaceBetween: 30,
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },
        breakpoints: {
          768: {
            slidesPerView: 2,
          },
          1024: {
            slidesPerView: 3,
          },
        },
        autoplay: {
          delay: 5000,
        },
      });

      // Efecto de scroll en la Navbar
      window.addEventListener("scroll", () => {
        const navbar = document.querySelector(".navbar");
        if (window.scrollY > 50) {
          navbar.classList.add("scrolled");
        } else {
          navbar.classList.remove("scrolled");
        }
      });

      // Menú Móvil
      const mobileMenuBtn = document.querySelector(".mobile-menu-btn");
      const navLinks = document.querySelector(".nav-links");

      mobileMenuBtn.addEventListener("click", () => {
        navLinks.classList.toggle("active");
      });

      // Desplazamiento Suave
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute("href"));
          if (target) {
            target.scrollIntoView({
              behavior: "smooth",
            });
            // Cierra el menú móvil si está abierto
            navLinks.classList.remove("active");
          }
        });
      });
    </script>
  </body>
</html>
