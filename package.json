{
  "name": "plomeria-express",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --watch src --watch src/views --ext ts,ejs,css --exec ts-node-dev --respawn src/server.ts",
    "build": "tsc && copyfiles -u 1 src/views/**/*.ejs dist",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "connect-livereload": "^0.6.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "livereload": "^0.9.3"
  },
  "devDependencies": {
    "@types/connect-livereload": "^0.6.3",
    "@types/express": "^4.17.21",
    "@types/livereload": "^0.9.3",
    "@types/node": "^20.11.24",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
