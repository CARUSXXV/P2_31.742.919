{
  "name": "plomeria-express",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --watch src --watch src/views --ext ts,ejs,css --exec ts-node-dev --respawn src/server.ts",
    "build": "tsc && copyfiles -u 1 src/views/**/*.ejs dist",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "connect-livereload": "^0.6.1",
    "livereload": "^0.9.3",
    "aos": "^2.3.4",
    "swiper": "^11.0.6",
    "sqlite3": "^5.1.7",
    "express-validator": "^7.0.1",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "@types/connect-livereload": "^0.6.3",
    "@types/express": "^4.17.21",
    "@types/livereload": "^0.9.3",
    "@types/node": "^20.11.24",
    "@types/aos": "^3.0.7",
    "@types/sqlite3": "^3.1.11",
    "nodemon": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
